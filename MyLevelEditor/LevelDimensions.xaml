<Window x:Class="LevelEditor.LevelDimensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelEditor"
        mc:Ignorable="d"
        Title="New Map" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label>Enter the dimensions</Label>
            <StackPanel Orientation="Horizontal">
                <Label>Width:</Label>
                <TextBox Text="100" Name="txbWidht"></TextBox>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Hight:</Label>
                <TextBox Text="20" Name="txbHeight"></TextBox>

            </StackPanel>
            <Button Name="btnCreate" Margin="20" Click="Button_Click">Create</Button>
        </StackPanel>
    </Grid>
</Window>
